@model CoderNexues.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "إنشاء حساب جديد";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 text-center">
                <h3 class="mb-4 text-primary fw-bold">حساب جديد</h3>
                
                <form asp-action="Register" method="post">
                    
                    <div class="mb-3 text-end">
                        <label asp-for="FullName" class="form-label fw-bold"></label>
                        <input asp-for="FullName" class="form-control" placeholder="أدخل اسمك الكامل" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 text-end">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 text-end">
                        <label asp-for="Password" class="form-label fw-bold"></label>
                        <input asp-for="Password" class="form-control" placeholder="******" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 text-end">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="******" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">تسجيل الحساب</button>
                    
                    <div class="mt-3">
                        <small>لديك حساب بالفعل؟ <a asp-action="Login" class="text-decoration-none">سجل دخولك هنا</a></small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}