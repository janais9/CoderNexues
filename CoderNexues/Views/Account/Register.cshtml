@model CoderNexues.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "حساب جديد";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row justify-content-center w-100" style="min-height: 80vh; align-items: center;">
    <div class="col-md-6 col-lg-5">

        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="p-4 text-center text-white" style="background: linear-gradient(135deg, #00d4ff 0%, #a033ff 100%);">
                <h3 class="fw-bold mb-1">انضم إلينا</h3>
                <p class="mb-0 opacity-75 small"> حياك الله نورت اكاديميتنا </p>
            </div>

            <div class="card-body p-5">
                <form asp-action="Register" method="post">

                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small ms-1">الاسم الكامل</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 ps-3 rounded-end-4 text-primary"><i class="bi bi-person"></i></span>
                            <input asp-for="FullName" class="form-control bg-light border-0 py-2 rounded-start-4" placeholder="أدخل اسمك الثلاثي" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small ms-1">البريد الإلكتروني</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 ps-3 rounded-end-4 text-primary"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control bg-light border-0 py-2 rounded-start-4" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted small ms-1">كلمة المرور</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 ps-3 rounded-end-4 text-primary"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control bg-light border-0 py-2 rounded-start-4" placeholder="••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold text-muted small ms-1">تأكيد كلمة المرور</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 ps-3 rounded-end-4 text-primary"><i class="bi bi-check-lg"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control bg-light border-0 py-2 rounded-start-4" placeholder="••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold shadow-sm" style="background: linear-gradient(135deg, #00d4ff 0%, #a033ff 100%); border:none;">
                        تسجيل الحساب <i class="bi bi-person-plus-fill ms-2"></i>
                    </button>

                    <div class="text-center mt-4">
                        <span class="text-muted small">لديك حساب بالفعل؟</span>
                        <a asp-action="Login" class="text-decoration-none fw-bold text-primary ms-1">سجل دخولك هنا</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}