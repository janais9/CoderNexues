@{
    ViewData["Title"] = "نسيت كلمة المرور";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-4 text-center">
                <div class="mb-3 text-primary">
                    <i class="bi bi-shield-lock fs-1"></i>
                </div>
                <h4 class="fw-bold mb-3">استعادة الحساب</h4>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="ForgotPassword" method="post">
                    <div class="mb-3 text-start">
                        <label class="form-label fw-bold small">البريد الإلكتروني المسجل</label>
                        <input name="email" type="email" class="form-control rounded-pill" required />
                    </div>

                    <div class="mb-4 text-start">
                        <label class="form-label fw-bold small">كلمة المرور الجديدة</label>
                        <input name="newPassword" type="password" class="form-control rounded-pill" placeholder="******" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">تغيير كلمة المرور</button>

                    <div class="mt-3">
                        <a asp-action="Login" class="text-muted text-decoration-none small">العودة لتسجيل الدخول</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>