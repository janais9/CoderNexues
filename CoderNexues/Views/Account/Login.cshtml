@model CoderNexues.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 text-center">
                <h3 class="mb-4 text-primary fw-bold">تسجيل الدخول</h3>
                
                <form asp-action="Login" method="post">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="mb-3 text-end">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 text-end">
                        <label asp-for="Password" class="form-label fw-bold"></label>
                        <input asp-for="Password" class="form-control" placeholder="******" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">دخول</button>
                    
                    <div class="mt-3">
                        <small>ليس لديك حساب؟ <a asp-action="Register" class="text-decoration-none">أنشئ حساب جديد</a></small>
                    </div>

                    <div class="text-start mb-3">
                        <a asp-action="ForgotPassword" class="text-decoration-none small text-muted">نسيت كلمة المرور؟</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}