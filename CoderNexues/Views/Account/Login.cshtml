@model CoderNexues.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row justify-content-center w-100" style="min-height: 80vh; align-items: center;">
    <div class="col-md-5 col-lg-4">

        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="p-4 text-center text-white" style="background: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%);">
                <h3 class="fw-bold mb-1">حياك الله </h3>
                <p class="mb-0 opacity-75 small">سجل دخولك للمتابعة</p>
            </div>

            <div class="card-body p-5">

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small py-2 rounded-3 border-0"></div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-muted small ms-1">البريد الإلكتروني</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 ps-3 rounded-end-4 text-primary"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control bg-light border-0 py-2 rounded-start-4" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-muted small ms-1">كلمة المرور</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 ps-3 rounded-end-4 text-primary"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control bg-light border-0 py-2 rounded-start-4" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="text-start mb-4">
                        <a asp-action="ForgotPassword" class="text-decoration-none small text-muted hover-link">نسيت كلمة المرور؟</a>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold shadow-sm" style="background: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%); border:none;">
                        تسجيل الدخول <i class="bi bi-box-arrow-in-left ms-2"></i>
                    </button>

                    <div class="text-center mt-4">
                        <span class="text-muted small">ليس لديك حساب؟</span>
                        <a asp-action="Register" class="text-decoration-none fw-bold text-primary ms-1">أنشئ حساباً جديداً</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<style>
    .form-control:focus {
        box-shadow: none;
        background-color: #fff !important;
    }

    .input-group-text {
        background-color: #f8f9fa;
    }

    .hover-link:hover {
        color: #a033ff !important;
        text-decoration: underline !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}