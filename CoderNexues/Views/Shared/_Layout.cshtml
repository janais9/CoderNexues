<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coder Nexues</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Arabic:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!--  (Updated Theme) -->
    <style>
        :root {
            /* تعريف متغير التدرج لاستخدامه في كل مكان */
            --main-gradient: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%);
        }

        body {
            font-family: 'IBM Plex Sans Arabic', sans-serif;
            background-color: #f8f9fa;
        }

        /* تعديل العناوين */
        h1, h2, h3, h4, h5, h6, .navbar-brand {
            font-weight: 600;
        }

        /* تلوين الشعار بالتدرج */
        .navbar-brand {
            background: var(--main-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 800 !important;
        }

        /* تعديل الزر الرئيسي في الموقع كامل (Login, Register, Add Camp) */
        .btn-primary {
            background: var(--main-gradient) !important;
            border: none;
            transition: opacity 0.3s;
        }

            .btn-primary:hover {
                opacity: 0.9;
                box-shadow: 0 4px 15px rgba(160, 51, 255, 0.4);
            }

        /* كلاس لتلوين النصوص بالتدرج */
        .text-gradient {
            background: var(--main-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* توسيط القائمة */
        .navbar-nav {
            flex-direction: row;
            gap: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-center position-relative">
                
                <a class="navbar-brand position-absolute start-0 ms-3" asp-controller="Home" asp-action="Index">Coder Nexus</a>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">الرئيسية</a>
                    </li>
                    
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                         <li class="nav-item">
                            <span class="nav-link text-primary fw-bold">حياك الله ، @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">تسجيل خروج</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">دخول</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white px-3" asp-controller="Account" asp-action="Register">حساب جديد</a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-danger" asp-controller="Users" asp-action="Index">
                                <i class="bi bi-gear-fill"></i> إدارة المستخدمين
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3 mt-4">
        <div class="container">
            &copy; 2025 - Coder Nexus - جميع الحقوق محفوظة
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>