<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - لوحة التحكم</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Arabic:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --main-gradient: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%);
        }

        body {
            font-family: 'IBM Plex Sans Arabic', sans-serif;
            background-color: #f8f9fa;
        }
        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            height: 95vh;
            position: fixed;
            top: 2.5vh;
            right: 20px;
            background: white;
            border-radius: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            display: flex;
            flex-direction: column;
            padding: 30px 20px;
            z-index: 1000;
        }

        .main-content {
            margin-right: 320px;
            padding: 40px 20px;
            min-height: 100vh;
        }

        .nav-link {
            color: #555;
            font-weight: 500;
            padding: 12px 15px;
            border-radius: 12px;
            margin-bottom: 5px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .nav-link:hover {
                background-color: #f8f9fa;
                color: #a033ff;
                transform: translateX(-5px);
            }

        .avatar-box {
            cursor: pointer;
            transition: transform 0.2s;
        }

            .avatar-box:hover {
                transform: scale(1.02);
            }

        .guest-container {
            padding-top: 20px;
        }
    </style>
</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        <aside class="sidebar">
            <a asp-controller="Profile" asp-action="Index" class="text-decoration-none text-dark avatar-box">
                <div class="text-center mb-4 pb-3 border-bottom">
                    <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-2"
                         style="width: 70px; height: 70px; color: #a033ff; font-size: 1.5rem; font-weight: bold;">
                        @User.Identity.Name.Substring(0, 1).ToUpper()
                    </div>
                    <h5 class="fw-bold mb-1">@User.Identity.Name</h5>

                    @if (User.IsInRole("Admin"))
                    {
                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Admin</span>
                    }
                    else if (User.IsInRole("Trainer"))
                    {

                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3">Trainer</span>
                    }
                    else
                    {

                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Student</span>
                    }
                </div>
            </a>

            <nav class="nav flex-column flex-grow-1">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i> الرئيسية
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link text-danger fw-bold" asp-controller="Users" asp-action="Index">
                        <i class="bi bi-gear-wide-connected"></i> إدارة المستخدمين
                    </a>
                    <a class="nav-link text-primary fw-bold" asp-controller="Reports" asp-action="Index">
                        <i class="bi bi-bar-chart-fill"></i> التقارير
                    </a>
                    <a class="nav-link" asp-controller="Camps" asp-action="Index">
                        <i class="bi bi-boxes"></i> المعسكرات
                    </a>
                    <a class="nav-link" asp-controller="Announcements" asp-action="Index">
                        <i class="bi bi-megaphone-fill"></i> الإعلانات
                    </a>
                }

                else if (User.IsInRole("Trainer"))
                {
                    <a class="nav-link" asp-controller="Camps" asp-action="Index">
                        <i class="bi bi-laptop"></i> المعسكرات
                    </a>
                    <a class="nav-link" asp-controller="Tasks" asp-action="Index">
                        <i class="bi bi-list-check"></i> المهام
                    </a>
                    <a class="nav-link" asp-controller="Announcements" asp-action="Index">
                        <i class="bi bi-megaphone"></i> الإعلانات
                    </a>
                }

                else
                {
                    <a class="nav-link" asp-controller="Tasks" asp-action="Index">
                        <i class="bi bi-code-slash"></i> المهام والتحديات
                    </a>
                    <a class="nav-link" asp-controller="Camps" asp-action="Index">
                        <i class="bi bi-grid"></i> المعسكرات
                    </a>
                    <a class="nav-link" asp-controller="Profile" asp-action="MyGrades">
                        <i class="bi bi-journal-check"></i> سجل الدرجات
                    </a>
                    <a class="nav-link" asp-controller="Camps" asp-action="MyPlan">
                        <i class="bi bi-map-fill"></i> الخطة
                    </a>
                    <a class="nav-link" asp-controller="Announcements" asp-action="Index">
                        <i class="bi bi-megaphone"></i> الإعلانات
                    </a>
                }
            </nav>

            <div class="mt-auto text-center border-top pt-3">
                <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm rounded-pill w-100">
                    <i class="bi bi-box-arrow-left"></i> تسجيل خروج
                </a>
            </div>
        </aside>

        <div class="main-content">
            @RenderBody()
        </div>
    }
    else
    {
        <nav class="navbar navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">Coder Nexus</a>
                <div>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-primary rounded-pill px-3">دخول</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-primary rounded-pill px-3">تسجيل</a>
                </div>
            </div>
        </nav>

        <div class="container guest-container">
            @RenderBody()
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>