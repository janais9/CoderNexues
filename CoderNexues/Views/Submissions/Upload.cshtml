@{
    ViewData["Title"] = "رفع الحل";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 text-center pt-4">
                <div class="mb-3">
                    <i class="bi bi-cloud-upload fs-1 text-gradient"></i>
                </div>
                <h3 class="fw-bold text-dark">تسليم المهمة</h3>
                <p class="text-muted">@ViewBag.TaskTitle</p>
            </div>

            <div class="card-body p-4">
                <form asp-action="Upload" method="post">
                    <input type="hidden" name="taskId" value="@ViewBag.TaskID" />

                    <div class="mb-4">
                        <label class="form-label fw-bold">رابط المشروع (GitHub)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-link-45deg"></i></span>
                            <input type="text" name="submissionLink" class="form-control border-start-0" placeholder="https://github.com/username/project" required />
                        </div>
                        <div class="form-text">تأكد من أن الرابط عام (Public) ليتمكن المدرب من الوصول إليه.</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold shadow">
                            تأكيد الإرسال <i class="bi bi-send-fill ms-2"></i>
                        </button>
                        <a asp-controller="Tasks" asp-action="Index" class="btn btn-light rounded-pill py-2">إلغاء</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>