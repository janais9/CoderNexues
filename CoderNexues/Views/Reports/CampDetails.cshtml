@model CoderNexues.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "تقرير المعسكر";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="fw-bold text-gradient">تقرير: @ViewBag.CampName</h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">عودة للقائمة</a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-warning text-dark fw-bold text-center">
                    <i class="bi bi-star-fill me-2"></i> أفضل 3 طلاب
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0 text-center">
                        <thead><tr><th>المركز</th><th>الاسم</th><th>النقاط</th></tr></thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var s in Model.TopStudents)
                            {
                                <tr>
                                    <td>#@rank</td>
                                    <td class="fw-bold">@s.StudentName</td>
                                    <td><span class="badge bg-primary rounded-pill">@s.TotalScore</span></td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-danger text-white fw-bold text-center">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> يحتاجون متابعة
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0 text-center">
                        <thead><tr><th>الاسم</th><th>النقاط</th></tr></thead>
                        <tbody>
                            @foreach (var s in Model.StrugglingStudents)
                            {
                                <tr>
                                    <td class="fw-bold">@s.StudentName</td>
                                    <td><span class="badge bg-danger rounded-pill">@s.TotalScore</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>