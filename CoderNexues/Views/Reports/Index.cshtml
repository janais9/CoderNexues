@model CoderNexues.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "الإحصائيات";
}

<div class="container py-5">
    <div class="d-flex align-items-center mb-4">
        <h2 class="fw-bold text-gradient m-0">لوحة القيادة والتقارير</h2>
        <span class="badge bg-primary ms-3 rounded-pill">Admin Panel</span>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="opacity-75">إجمالي الطلاب</h5>
                            <h2 class="fw-bold display-5 mb-0">@Model.TotalStudents</h2>
                        </div>
                        <i class="bi bi-people-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 text-white" style="background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="opacity-75">معسكرات نشطة</h5>
                            <h2 class="fw-bold display-5 mb-0">@Model.ActiveCamps</h2>
                        </div>
                        <i class="bi bi-laptop fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 text-white" style="background: linear-gradient(135deg, #ff758c 0%, #ff7eb3 100%);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="opacity-75">إجمالي الحلول</h5>
                            <h2 class="fw-bold display-5 mb-0">@Model.TotalSubmissions</h2>
                        </div>
                        <i class="bi bi-code-slash fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="fw-bold mb-4">اختر المعسكر لعرض المتصدرين</h3>
    <div class="row g-4">
        @foreach (var camp in ViewBag.Camps as List<CoderNexues.Models.Camp>)
        {
            <div class="col-md-6 col-lg-4">
                <a asp-action="CampDetails" asp-route-id="@camp.CampID" class="text-decoration-none">
                    <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow">
                        <div class="card-body p-4 text-center">
                            <div class="mb-3 text-primary"><i class="bi bi-trophy-fill fs-1"></i></div>
                            <h5 class="fw-bold text-dark">@camp.CampName</h5>
                            <span class="btn btn-outline-primary rounded-pill btn-sm mt-2">عرض التقرير</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

</div>