@model CoderNexues.Models.User

@{
    ViewData["Title"] = "الملف الشخصي";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                        <span class="fs-1 text-primary fw-bold">@Model.FullName.Substring(0, 1).ToUpper()</span>
                    </div>
                </div>
                <h4 class="fw-bold">@Model.FullName</h4>
                <p class="text-muted">@Model.Role</p>
                <hr />
                <div class="text-start">
                    <p><i class="bi bi-envelope me-2 text-primary"></i> @Model.Email</p>
                    <p><i class="bi bi-calendar-check me-2 text-primary"></i> عضو منذ @Model.CreatedAt.ToString("yyyy")</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h3 class="fw-bold text-gradient mb-4">معسكراتي</h3>

            @if (Model.CampUsers != null && Model.CampUsers.Any())
            {
                foreach (var cu in Model.CampUsers)
                {
                    <div class="card border-0 shadow-sm rounded-4 mb-3">
                        <div class="card-body p-4 d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold mb-1">@cu.Camp.CampName</h5>
                                <span class="badge bg-success bg-opacity-10 text-success">مشترك نشط</span>
                            </div>
                            <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-primary rounded-pill">عرض المهام</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info rounded-4">
                    أنت غير مسجل في أي معسكر حالياً. <a asp-controller="Camps" asp-action="Index">تصفح المعسكرات</a>
                </div>
            }
        </div>
    </div>
</div>