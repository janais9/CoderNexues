@{
    ViewData["Title"] = "الرئيسية";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row justify-content-center w-100">
    <div class="col-lg-10 col-xl-9">

        <div class="d-flex justify-content-between align-items-center mb-4 px-2">
            <h5 class="fw-bold text-dark m-0 opacity-75">الصفحة الرئيسية</h5>
            <h5 class="fw-bold text-primary m-0">Coder Nexus</h5>
        </div>

        <div class="card border-0 shadow-lg text-center text-white position-relative overflow-hidden"
             style="background: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%); border-radius: 40px; padding: 80px 20px;">

            <div style="position: absolute; top: -50px; left: -50px; width: 150px; height: 150px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
            <div style="position: absolute; bottom: -30px; right: -30px; width: 100px; height: 100px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>

            <div class="card-body position-relative z-1">

                <h1 class="display-3 fw-bold mb-3">Coder Nexus</h1>
                <p class="fs-4 fw-light mb-5 opacity-90">طويق .. طريقك نحو القمة</p>

                @if (User.Identity.IsAuthenticated)
                {
                    <h3 class="fw-bold mb-3">حياك الله، @User.Identity.Name</h3>
                }
                else
                {
                    <h3 class="fw-bold mb-3">حياك الله، يا مبدع</h3>
                }

                <div class="d-inline-block px-5 py-2 mb-5 rounded-pill"
                     style="background: rgba(255, 255, 255, 0.15); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3);">
                    اصنع لك بصمة وأثراً واضحاً... بيئة متكاملة للمطورين
                </div>

                <div class="d-flex flex-column flex-md-row justify-content-center gap-3 mt-2">

                    <a asp-controller="Camps" asp-action="Index"
                       class="btn btn-light text-primary fw-bold rounded-pill px-5 py-3 shadow-sm fs-5"
                       style="min-width: 220px;">
                        تصفح المعسكرات
                    </a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Tasks" asp-action="Index"
                           class="btn fw-bold rounded-pill px-5 py-3 shadow fs-5"
                           style="background: white; color: #a033ff; min-width: 220px;">
                            لوحتك
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"
                           class="btn fw-bold rounded-pill px-5 py-3 shadow fs-5"
                           style="background: white; color: #a033ff; min-width: 220px;">
                            دخول / تسجيل
                        </a>
                    }
                </div>

            </div>
        </div>


        <div class="text-center mt-5">
            <a asp-action="Dedication" class="text-decoration-none text-muted opacity-75 small hover-link">
                إلى من يهمه أمري ✨
            </a>

            <div class="mt-2 text-muted small" style="font-size: 0.7rem;">
                &copy; 2025 Coder Nexus - جميع الحقوق محفوظة
            </div>
        </div>

    </div>
</div>

<style>
    .hover-link {
        transition: all 0.3s;
        border-bottom: 1px dashed transparent;
    }

        .hover-link:hover {
            color: #a033ff !important;
            opacity: 1;
            border-bottom-color: #a033ff;
        }
</style>