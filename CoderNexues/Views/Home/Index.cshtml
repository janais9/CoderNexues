@model IEnumerable<CoderNexues.Models.Camp>

@{
    ViewData["Title"] = "الرئيسية";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="row justify-content-center mb-5">
    <div class="col-12">
        <div class="card border-0 shadow-sm text-center text-white position-relative overflow-hidden"
             style="background: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%); border-radius: 30px; padding: 60px 20px;">

            <div class="card-body position-relative z-1">
                <h1 class="display-4 fw-bold mb-3">Coder Nexus</h1>
                <p class="fs-4 fw-light mb-4 opacity-90">طويق .. طريقك نحو القمة</p>
                <div class="d-inline-block px-4 py-2 rounded-pill"
                     style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(5px); border: 1px solid rgba(255,255,255,0.3);">
                    اصنع لك بصمة وأثراً واضحاً... بيئة متكاملة للمطورين
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Dedication" class="text-white text-decoration-none small opacity-75 hover-link">
                    إلى من يهمه أمري ✨
                </a>
            </div>
        </div>
    </div>
</div>

<div class="d-flex align-items-center mb-4 px-2">
    <h3 class="fw-bold text-dark m-0">المعسكرات والبرامج المتاحة</h3>
    <span class="badge bg-white text-secondary border ms-3 rounded-pill px-3 py-2 shadow-sm">@Model.Count() برنامج</span>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="opacity-50 mb-3"><i class="bi bi-inbox fs-1 text-muted"></i></div>
        <p class="text-muted">لا توجد معسكرات متاحة للتسجيل حالياً.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm camp-card bg-white" style="border-radius: 20px; overflow: hidden; transition: transform 0.3s;">

                    <div class="position-relative d-flex align-items-center justify-content-center overflow-hidden"
                         style="height: 140px; background: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%);">

                        <i class="bi bi-code-slash position-absolute text-white" style="font-size: 8rem; opacity: 0.1; right: -20px; bottom: -30px; transform: rotate(-15deg);"></i>

                        <div class="bg-white rounded-circle d-flex align-items-center justify-content-center shadow-sm position-relative z-1"
                             style="width: 60px; height: 60px;">
                            <i class="bi bi-laptop text-primary fs-3"></i>
                        </div>

                        <span class="badge bg-white text-dark shadow-sm position-absolute top-0 start-0 m-3 rounded-pill px-3 fw-normal" style="font-size: 0.75rem;">معسكر</span>
                    </div>

                    <div class="card-body p-4 d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="text-success small fw-bold bg-success bg-opacity-10 px-2 py-1 rounded-3">
                                <i class="bi bi-circle-fill me-1" style="font-size: 6px; vertical-align: middle;"></i> متاح التسجيل
                            </span>
                        </div>

                        <h5 class="card-title fw-bold mb-3 text-dark lh-base">@item.CampName</h5>

                        <p class="card-text text-muted small flex-grow-1" style="line-height: 1.6;">
                            @(item.Description != null && item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                        </p>

                        <div class="mt-4 pt-3 border-top d-flex justify-content-between align-items-center text-muted small">
                            <span><i class="bi bi-calendar-event me-2 text-primary opacity-75"></i>يبدأ: @item.StartDate.ToString("yyyy/MM/dd")</span>
                        </div>
                    </div>

                    <a href="@(User.Identity.IsAuthenticated? Url.Action("Details", "Camps", new { id = item.CampID }) : Url.Action("Login", "Account"))"
                       class="stretched-link"></a>
                </div>
            </div>
        }
    </div>
}

<style>
    .camp-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.08) !important;
    }

    .hover-link:hover {
        text-decoration: underline !important;
        opacity: 1 !important;
    }
</style>