@model CoderNexues.Models.C_Task

@{
    ViewData["Title"] = "تفاصيل المهمة";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-header border-0 p-4 text-white" style="background: linear-gradient(135deg, #a033ff 0%, #00d4ff 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-file-earmark-text me-2"></i>تفاصيل التحدي</h5>
                    <span class="badge bg-white text-primary rounded-pill px-3">
                        @(Model.Camp != null ? Model.Camp.CampName : "عام")
                    </span>
                </div>
            </div>

            <div class="card-body p-5">
                <h2 class="fw-bold text-dark mb-3">@Model.Title</h2>

                <div class="d-flex gap-4 mb-4 text-muted">
                    <span><i class="bi bi-calendar-event me-1"></i> <strong>التسليم:</strong> @Model.DueDate.ToString("yyyy/MM/dd HH:mm")</span>
                    <span><i class="bi bi-star-fill text-warning me-1"></i> <strong>الدرجة:</strong> @Model.MaxScore</span>
                </div>

                <hr />

                <div class="mb-5">
                    <h5 class="fw-bold text-primary mb-3">وصف المهمة:</h5>
                    <p class="lead fs-6 text-secondary" style="line-height: 1.8;">
                        @Model.Description
                    </p>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-right me-1"></i> عودة للقائمة
                    </a>

                    <div>
                        @if (User.IsInRole("Student"))
                        {
                            <a asp-controller="Submissions" asp-action="Upload" asp-route-taskId="@Model.TaskID" class="btn btn-success rounded-pill px-4 fw-bold shadow">
                                <i class="bi bi-upload me-2"></i> رفع الحل
                            </a>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Trainer"))
                        {
                            <a asp-controller="Evaluations" asp-action="Review" asp-route-taskId="@Model.TaskID" class="btn btn-warning rounded-pill px-4 ms-2">
                                <i class="bi bi-clipboard-data"></i> تصحيح
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>