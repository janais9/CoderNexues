@model CoderNexues.Models.Camp

@{
    ViewData["Title"] = "تعديل المعسكر";
}

<div class="row justify-content-center py-4">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h3 class="fw-bold text-primary">
                    <i class="bi bi-pencil-square me-2"></i>تعديل بيانات المعسكر
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="CampID" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="CampName" class="form-label fw-bold text-muted">اسم المعسكر</label>
                        <input asp-for="CampName" class="form-control rounded-3" />
                        <span asp-validation-for="CampName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold text-muted">الوصف</label>
                        <textarea asp-for="Description" class="form-control rounded-3" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label fw-bold text-muted">تاريخ البداية</label>
                            <input asp-for="StartDate" class="form-control rounded-3" type="date" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDate" class="form-label fw-bold text-muted">تاريخ النهاية</label>
                            <input asp-for="EndDate" class="form-control rounded-3" type="date" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Status" class="form-label fw-bold text-muted">الحالة</label>
                        <select asp-for="Status" class="form-select rounded-3">
                            <option value="Active">نشط (Active)</option>
                            <option value="Completed">مكتمل (Completed)</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between mt-4 border-top pt-3">
                        <a asp-action="Index" class="btn btn-light rounded-pill px-4">إلغاء</a>
                        <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold shadow">
                            حفظ التعديلات
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}