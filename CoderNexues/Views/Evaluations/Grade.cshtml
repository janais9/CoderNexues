@model CoderNexues.Models.Evaluation

@{
    ViewData["Title"] = "تقييم الطالب";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 px-4 text-center">
                <h3 class="fw-bold text-primary">تقييم الأداء</h3>
                <p class="text-muted">للطالب: @Model.Submission.Student.FullName</p>

                <a href="@Model.Submission.SubmissionLink" target="_blank" class="btn btn-outline-dark btn-sm rounded-pill mb-2">
                    <i class="bi bi-github me-1"></i> استعراض المشروع
                </a>
            </div>

            <div class="card-body p-4">
                <form asp-action="Grade">
                    <input type="hidden" asp-for="EvaluationID" />
                    <input type="hidden" asp-for="SubmissionID" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">الدرجة (من @Model.Submission.Task.MaxScore)</label>
                        <input asp-for="Score" class="form-control" type="number" max="@Model.Submission.Task.MaxScore" />
                        <span asp-validation-for="Score" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryID" class="form-label fw-bold">نوع الملاحظة</label>
                        <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.CategoryID"></select>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Feedback" class="form-label fw-bold">الملاحظات والتوجيهات</label>
                        <textarea asp-for="Feedback" class="form-control" rows="4" placeholder="اكتب ملاحظاتك للطالب هنا..."></textarea>
                        <span asp-validation-for="Feedback" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100 rounded-pill fw-bold py-2">
                        حفظ التقييم <i class="bi bi-check-lg"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>