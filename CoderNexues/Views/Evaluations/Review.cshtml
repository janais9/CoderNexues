@model IEnumerable<CoderNexues.Models.Submission>

@{
    ViewData["Title"] = "مراجعة التسليمات";
}

<div class="container py-5">
    <h2 class="fw-bold text-gradient mb-4">تصحيح: @ViewBag.TaskTitle</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
    else
    {
        <div class="card shadow-sm border-0 rounded-4">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="p-3">اسم الطالب</th>
                        <th>تاريخ التسليم</th>
                        <th>الحالة</th>
                        <th>الدرجة</th>
                        <th>الإجراء</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="p-3 fw-bold">@item.Student.FullName</td>
                            <td>@item.SubmittedAt.ToString("yyyy/MM/dd HH:mm")</td>
                            <td>
                                @if (item.Evaluation != null)
                                {
                                    <span class="badge bg-success">تم التقييم</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">بانتظار التصحيح</span>
                                }
                            </td>
                            <td>
                                @if (item.Evaluation != null)
                                {
                                    <span class="fw-bold">@item.Evaluation.Score / @item.Task.MaxScore</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                <!-- زر فتح رابط الطالب -->
                                <a href="@item.SubmissionLink" target="_blank" class="btn btn-sm btn-outline-secondary me-2">
                                    <i class="bi bi-github"></i> الكود
                                </a>
                                <!-- زر التصحيح -->
                                <a asp-action="Grade" asp-route-submissionId="@item.SubmissionID" class="btn btn-sm btn-primary">
                                    <i class="bi bi-check2-square"></i> تصحيح
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Tasks" asp-action="Index" class="btn btn-light rounded-pill">عودة للمهام</a>
    </div>
</div>